{
  "rules": {
    ".read": false,
    ".write": false,
    "rooms": {
      "$roomId": {
        ".read": "data.child('players').hasChild(auth.uid) || !data.exists()",
        ".write": "data.child('players').hasChild(auth.uid) || !data.exists()",
        "players": {
          "$playerId": {
            ".write": "$playerId === auth.uid"
          }
        },
        "gameState": {
          ".write": "data.parent().child('players').hasChild(auth.uid)"
        }
      }
    },
    "playerData": {
      "$userId": {
        ".read": "$userId === auth.uid",
        ".write": "$userId === auth.uid",
        "learningData": {
          ".validate": "newData.hasChildren(['sessions', 'preferences', 'strengths'])"
        },
        "gameStats": {
          ".validate": "newData.hasChildren(['gamesPlayed', 'averageTime', 'favoriteComplexity'])"
        }
      }
    },
    "leaderboards": {
      ".read": true,
      "$complexityLevel": {
        "$entryId": {
          ".write": "auth !== null && (!data.exists() || data.child('playerId').val() === auth.uid)"
        }
      }
    }
  }
}
